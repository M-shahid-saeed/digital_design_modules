`include "transaction.sv"

class counter_monitor;
virtual counter_intf vif;
mailbox mon2scb;
transaction tr;
function new(virtual counter_intf vif, mailbox mon2scb);
this.vif=vif;
this.mon2scb=mon2scb;
endfunction
task run();
forever begin
tr=new();
@(posedge vif.clk)
tr.en=vif.en;
tr.up_dn=vif.up_dn;
tr.counter=vif.counter;
mon2scb.put(tr);
end
endtask
endclass

