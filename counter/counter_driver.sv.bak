`include "transaction.sv"

class counter_driver; 
transaction tr;
mailbox mbx;
virtual counter_intf vif;
function new(mailbox mbx,virtual counter_intf vif);
this.mbx=mbx;
this.vif=vif;
end
task run();
vif.rst <= 1;
 vif.en  <= 0;
repeat(2) @(posedge vif.clk);
    vif.rst <= 0;
 
forever begin
mbx.get(tr);
tr.display("driver");
@(posedge vif.clk);
vif.en<=tr.en;
vif.up_dn<=tr.up_dn;
$display("driver ko bhej do up_dn=%d,en=%d",tr.up_dn,tr.en);
end
endtask
endclass

