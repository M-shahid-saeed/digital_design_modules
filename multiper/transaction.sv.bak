`ifndef TRANSACTION_SV
`define TRANSACTION_SV

// N parameter add kiya, default 8 rakha
class transaction #(parameter N = 8);
    
    // Rand variables ki width N ke mutabiq automatic change hogi
    rand bit [N-1:0] Data_in_A;
    rand bit [N-1:0] Data_in_B;
    
    bit EA = 1'b1; 
    bit EB = 1'b1;
    bit Reset;              
    
    // Product hamesha double hota hai (2*N)
    bit [2*N-1:0] P_out;  

    // Display function ko thora aur professional banaya
    function void display(string name);
        // %0d use kiya taake extra spaces na aayin
        $display("[%s] Reset=%b, EA=%b, EB=%b, A=%0d, B=%0d | Product=%0d", 
                  name, Reset, EA, EB, Data_in_A, Data_in_B, P_out);
    endfunction

    
endclass

`endif